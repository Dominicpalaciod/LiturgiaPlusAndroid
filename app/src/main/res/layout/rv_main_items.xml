<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="0.5dp"
        card_view:cardMaxElevation="0.5dp"
        card_view:contentPadding="0.1dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:maxWidth="82dp"
                android:maxHeight="82dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                card_view:tint="@color/colorMainIcon" />

            <TextView
                android:id="@+id/tv_Material"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="-50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|center_horizontal"
                android:paddingTop="-50dp"
                android:scaleType="fitStart"
                android:textColor="@color/colorMainItem"
                android:textSize="85sp" />

            <TextView
                android:id="@+id/tv_Elemento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_Material"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|center_horizontal"
                android:textColor="@color/colorMainItem"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>